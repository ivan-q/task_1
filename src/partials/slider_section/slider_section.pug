section.slider-section
    .container
        article.product

            p.product__description Portable Wireless Speaker
            h2.product__title Beats Pill
                sup.plus-sign +

            .color-change
                h2.color-change__h2 Available Colors
                p.color-change__p Find your Color
                ul.color-change__circles
                    -for(let i = 0; i < 6; i++)
                        li.circle

            .product__wrap
                p.product__price $299.95
                a.product__button(href='#') Buy now

            p.product__offer $60 Apple Music gift card with purchase of select Beats products.*
            
        article.slider
            .slider__img-wrap
                img.slider__img.slider__img_1(src='../src/img/Bitmap-1.png' alt='slider')
                img.slider__img.slider__img_2.hidden(src='../src/img/image(1).jpg' alt='slider')
                img.slider__img.slider__img_3.hidden(src='../src/img/image(7).jpg' alt='slider')
            ul.pagination
                li.pag
                li.pag
